<!-- En tu archivo subirM.hbs -->
<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold text-center">Subir Manual a la Base de Datos</h1>

  <form action="/subir" method="post" enctype="multipart/form-data">
    <input type="file" name="archivo" accept=".txt, .pdf, .docx" class="border border-gray-200 w-full text-lg p-2 my-2">
    <!-- Asegúrate de agregar aceptar tipos de archivo que desees permitir -->

    <button type="submit" class="rounded-md bg-blue-500 w-full text-lg text-white
      font-semibold p-2 my-3 hover:bg-blue-600 focus:bg-blue-700">Subir Archivo</button>
  </form>


    <form>
		<button type="button" class="rounded-md bg-red-500 w-full text-lg text-white
		font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700" onclick="goToCasa()">Volver</button>
	</form>
    {{#if error}}
    <p class="text-red-500 font-bold text-lg my-3">{{error}}</p>
    {{/if}}

</div>

<script>
  function goToCasa() {
    window.location.href = '/register';  // Ajusta la ruta según la configuración de tus rutas
  }

</script>