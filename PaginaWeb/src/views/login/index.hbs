<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg">
  <h1 class="text-3x1 font-bold text-center">Login</h1>
	<form action="/auth" method="post">
		<label for="email">
			<!-- font awesome icon -->
			<i class="fas fa-user"></i>
		</label>
		<input type="email" name="email" placeholder="email" id="email" 
		class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
		focus:bg-white" required>
		<label for="password">
			<i class="fas fa-lock"></i>
		</label>
		<input type="password" name="password" placeholder="Password" id="password" 
		class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
		focus:bg-white" required>
		<button type="submit" value="Login" class="rounded-md bg-green-500 w-full text-lg text-white
         font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700">LOGIN</button>
	</form>
	<form>
		<button type="button" class="rounded-md bg-red-500 w-full text-lg text-white
		font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700" onclick="goToCasa()">SALIR</button>
	</form>
</div>

<script>
  function goToCasa() {
    window.location.href = '/inicio';  // Ajusta la ruta según la configuración de tus rutas
  }
</script>